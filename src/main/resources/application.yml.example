spring:
  application:
    name: rollup-api

  # PostgreSQL (Supabase) 설정
  datasource:
    url: jdbc:postgresql://your-host:5432/your-database
    username: your-username
    password: your-password
    driver-class-name: org.postgresql.Driver

  jpa:
    hibernate:
      ddl-auto: update
    show-sql: false
    properties:
      hibernate:
        format_sql: true
        dialect: org.hibernate.dialect.PostgreSQLDialect

  # Async 설정
  task:
    execution:
      pool:
        core-size: 5
        max-size: 10

# Firebase 설정
firebase:
  config-path: firebase-service-account.json

# CORS 설정
cors:
  allowed-origins: http://localhost:5173,http://localhost:3000

# Server 설정
server:
  port: 8080

# Logging 설정
logging:
  level:
    root: INFO
    com.rollup.rollupapi: DEBUG
    org.hibernate.SQL: DEBUG

---
# Production 프로파일
spring:
  config:
    activate:
      on-profile: prod

  jpa:
    show-sql: false
    hibernate:
      ddl-auto: validate

logging:
  level:
    root: WARN
    com.rollup.rollupapi: INFO
    org.hibernate.SQL: WARN